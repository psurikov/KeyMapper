<Window
    x:Class="KeyMapper.Views.ProfileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:KeyMapper.Views"
    mc:Ignorable="d"
    Title="Create Profile"
    Width="400"
    Height="200"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    Name="MainControl"
    Style="{StaticResource WindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Text="Enter a profile name for your keyboard mappings:"
            FontSize="14"
            Margin="0 0 0 15"
            TextWrapping="Wrap"/>
        <!-- Profile name -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock
                Text="Profile Name:"
                VerticalAlignment="Center"
                Width="100"/>
            <TextBox
                x:Name="ProfileNameTextBox"
                Text="{Binding ProfileName, ElementName=MainControl}"
                Width="220"
                Margin="10 0 0 0"
                Background="#2D2D30"
                BorderBrush="#3E3E42"
                Foreground="White"
                Padding="5"/>
        </StackPanel>
        <!-- Buttons -->
        <StackPanel
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="0 20 0 0">
            <Button
                Content="OK"
                Width="80"
                Margin="0 0 10 0"
                IsDefault="True"
                Background="#007ACC"
                Foreground="White"
                BorderThickness="0"
                Padding="5,2"
                Click="AcceptButtonClick"/>
            <Button
                Content="Cancel"
                Width="80"
                IsCancel="True"
                Background="#3E3E42"
                Foreground="White"
                BorderThickness="0"
                Padding="5,2"
                Click="CancelButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
